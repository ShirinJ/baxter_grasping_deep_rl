<robot name="sphere">
  <link name="sphere">
    <inertial>
      <origin xyz="0.02 0.02 0.02" />
      <mass value="0.5" />
      <inertia  ixx="0.5" ixy="0.0"  ixz="0.0"  iyy="0.5"  iyz="0.0"  izz="0.5" />
    </inertial>
    <visual>
      <origin xyz="0.02 0.02 0.02"/>
      <geometry>
        <sphere radius="0.02" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.02 0.02 0.02"/>
      <geometry>
        <sphere radius="0.02" />
      </geometry>
    </collision>
  </link>
  <gazebo reference="sphere">
    <material>Gazebo/Red</material>
     <mu1>1000</mu1>
     <mu2>1000</mu2>
	 <sensor name="sphere_sensor" type="contact">
		  <always_on>false</always_on>
		  <update_rate>0.1</update_rate>
		  <contact>
			  <collision>sphere_collision</collision>
		  </contact>
		  <plugin name="sphere_bumper" filename="libgazebo_ros_bumper.so">
			  <bumperTopicName>object_contact2</bumperTopicName>
			  <frameName>sphere</frameName>
		  </plugin>
	 </sensor> 
  </gazebo>
</robot>
